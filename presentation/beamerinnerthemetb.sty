\DeclareOptionBeamer{shadow}[true]{\def\beamer@themerounded@shadow{#1}}
\ExecuteOptionsBeamer{shadow=false}
\ProcessOptionsBeamer

\defbeamertemplate*{title page}{information}[1][]
{
	% Logo
	%\begin{textblock*}{4cm}(-1.0cm,3.5cm)
	%	\begin{beamercolorbox}[sep=2pt, wd=3cm, ht=10pt, left, ignorebg, #1]{titlepage}
	%		\includegraphics[width=4cm, keepaspectratio]{Modele/sis2019.jpg}
	%	\end{beamercolorbox}
	%\end{textblock*}

	% Texte
	\begin{textblock*}{7.3cm}(3cm,-1cm)
		\begin{flushleft}
			% Titre
			\begin{beamercolorbox}[wd=7.3cm, ht=5pt, left, ignorebg, #1]{titlepage}
%				\usebeamerfont{title}
				\LARGE{\textbf{\inserttitle}}
			\end{beamercolorbox}
			% Auteur
			\vspace{0.25cm}
			\hspace{-1.5cm}
			\begin{beamercolorbox}[sep=0pt, wd=9cm, ht=5pt, right, ignorebg, #1]{titlepage}
				\usebeamerfont{author}
				\insertauthor
			\end{beamercolorbox}
		\end{flushleft}
	\end{textblock*}
	% Barre tricolore
	\begin{textblock*}{7.8cm}(1cm,2cm)
		\begin{beamercolorbox}[sep=2pt, wd=2cm, ht=10pt, left, ignorebg, #1]{titlepage}
			\input{images/barre_tricolore_garde.tex}
		\end{beamercolorbox}
	\end{textblock*}
	\begin{textblock*}{6cm}(6.5cm,3.5cm)
	    \begin{beamercolorbox}[#1]{titlepage}
		    \footnotesize
		    \insertinstitute
		\end{beamercolorbox}
	\end{textblock*}
}

\mode<presentation>

%Commande de titre
\newcommand{\inserttitlepage}[0]{
	\frame[plain]{\titlepage}
}

\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamertemplate{itemize item}[square]
\setbeamertemplate{itemize subitem}[circle]
\setbeamertemplate{itemize subsubitem}[default]
\setbeamertemplate{sections/subsections in toc}[square]
\setbeamertemplate{title page}[information][]
\setbeamertemplate{part page}[default][colsep=-4bp,rounded=true,shadow=\beamer@themerounded@shadow]




\mode<all>